{
  "name": "@epicurrents/htm-reader",
  "version": "0.0.0",
  "description": "Epicurrents HTM file loader",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:umd && npm run build:tsc",
    "build:assets": "webpack --progress --stats-error-details --config webpack.assets.js",
    "build:tsc": "tsc && tsconfig-replace-paths --project tsconfig.json",
    "build:umd": "webpack --progress --config webpack.config.js",
    "dev": "webpack serve --progress --config webpack.dev.js",
    "lint": "npm run lint:src",
    "lint:src": "eslint src",
    "prepack": "npm run build",
    "release": "npm publish --access=public",
    "test": "npm run test:unit",
    "test:unit": "jest --coverage --verbose --no-cache --runInBand",
    "update:core": "cd node_modules/@epicurrents/core && git pull && npm i && npm run build:tsc"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": "./dist/types/index.d.ts",
    "./package.json": "./package.json",
    "./dist/types": "./dist/types/index.d.ts"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "files": [
    "dist/*",
    "umd/*.js",
    "umd/*.LICENSE.txt",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epicurrents/htm-reader.git"
  },
  "author": "Sampsa Lohi",
  "license": "Apache-2.0",
  "dependencies": {
    "@epicurrents/core": "^0.3.0-2",
    "dotenv": "^16.3.2",
    "markdown-it": "^14.1.0",
    "scoped-event-log": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.23.8",
    "@microsoft/tsdoc": "^0.14.1",
    "@types/jest": "^27.5.2",
    "@types/markdown-it": "^14.1.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.5",
    "circular-dependency-plugin": "^5.2.2",
    "eslint": "^8.55.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.3.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.15.1"
  }
}
